<%- include('partials/_header.ejs'); -%>
<br><br><br><br><br>
<div ><h2 align=center>User Details</h2></div>
<div align=right>
  <a href="/" class="btn btn-info" >Add User</a>
</div>
<div class="container mt-5">
    <div class="row">
      <div class="col-md-7">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td>ID</td>
              <td>FirstName</td>
              <td>LastName</td>
              <td>Email</td>
              <td>Phone</td>
              <td>City</td>
              <td>Actions</td>
            </tr>
          </thead>
          <tbody>
            <% if (data) { %>
              <% for(var i = 0; i < data.length; i++) { %>
                <tr class="table-success">
                  <td><%= (i + 1) %></td>
                  <td><%= data[i].FirstName %></td>
                  <td><%= data[i].LastName %></td>
                  <td><%= data[i].email %></td>
                  <td><%= data[i].phone %></td>
                  <td><%= data[i].City %></td>
                  <td>
                    <a href="/update/<%= data[i].Id %>" class="btn btn-info">Edit</a>
                    <a href="/delete/<%= data[i].Id %>" class="btn btn-danger">Delete</a>
                  </td>
                </tr>
              <% } %>
            <% } %>
          </tbody>
        </table>
    </div>
</div>
</div>
<%- include('partials/_footer.ejs'); -%>